<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainScreenView">

    <Button
        android:id="@+id/workoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#81D4FA"
        android:text="@string/add_workout"
        android:textColor="@color/black"
        app:strokeColor="#505050"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/mealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_meal"
        android:backgroundTint="#81D4FA"
        android:textColor="@color/black"
        app:strokeWidth="1dp"
        app:strokeColor="#505050"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/workoutButton"/>

    <TextView
        android:id="@+id/dateString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Päivämäärä" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Kalorit"
        android:layout_below="@+id/calorieProgress"/>

    <TextView
        android:id="@+id/fat"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Rasvaa"
        android:layout_below="@+id/calorieProgress"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/calories"/>

    <TextView
        android:id="@+id/carbohydrates"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Hiilarit"
        android:layout_below="@+id/calorieProgress"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/fat"/>

    <TextView
        android:id="@+id/protein"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Roheiini"
        android:layout_below="@+id/calorieProgress"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/carbohydrates"/>

    <ProgressBar
        android:id="@+id/calorieProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dateString" />

    <ProgressBar
        android:id="@+id/fatProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/calorieProgress"
        />

    <ProgressBar
        android:id="@+id/carbohydrateProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/fatProgress"
        />

    <ProgressBar
        android:id="@+id/proteinProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/carbohydrateProgress"
        />

</RelativeLayout>